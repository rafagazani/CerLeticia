
<p id="notice"><%= notice %></p>

<h1>Objetos</h1>



<!--Botão para editar-->  
<%= link_to new_post_path, :class => 'btn-floating btn-large deep-orange lighten-1 waves-effect waves-light btn white-text' do %>
    <i class="fa fa-plus left"></i>Novo
<% end %>
<!--Fim do botão editar-->


  
    
<div class="row"> 

      
        <% @posts.each do |post| %>

    
        <div class="col s12 m6 l4">

          <div class="card small">
              <div class="card-image waves-effect waves-block waves-light">
               <%= image_tag('/uploads/'+File.basename(post.image_url(:pequeno)))%>
              </div>

              <div class="card-content">
                
                  <span class="card-title activator grey-text text-darken-5"><%= post.titulo %></span><br>
                  
                  

                   <!--Botão para mostrar-->  
          <%= link_to post, :class => 'waves-effect waves-light btn white-text small' do %>
              <i class="fa fa-search"></i>
          <% end %>
          <!--Fim do botão mostrar-->
          &nbsp;
          <!--Botão para editar-->  
          <%= link_to edit_post_path(post), :class => 'waves-effect waves-light btn white-text small' do %>
              <i class="fa fa-pencil"></i>
          <% end %>
          <!--Fim do botão editar-->
          &nbsp;
          <!--Botão para excluir-->  
          <%= link_to post, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'waves-effect waves-light btn red white-text small' do %>
              <i class="fa fa-remove"></i>
          <% end %>
          <!--Fim do botão excluir-->



                  

              </div>
          </div>
    

       
        </div>
        
        <% end %>
       </div>  
    
  


